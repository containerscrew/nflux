post_install() {
    echo ">>> Setting up nflux environment"
    mkdir -p /var/log/nflux
    touch /var/log/nflux/nflux.log
    chmod 644 /var/log/nflux/nflux.log

    systemctl daemon-reload

    systemctl enable nflux.service
}

post_upgrade() {
    mkdir -p /var/log/nflux
    touch /var/log/nflux/nflux.log

    systemctl daemon-reload
    systemctl restart nflux.service
}

pre_remove() {
    systemctl disable --now nflux.service
}

post_remove() {
    systemctl daemon-reload
    rm -rf /var/log/nflux
}
